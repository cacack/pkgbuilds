pkgname=perl-dbix-admin-tableinfo
pkgver=2.11
pkgrel=2
pkgdesc="DBIx::Admin::TableInfo -  A wrapper for all of table_info(), column_info(), *_key_info()"
_dist=DBIx-Admin-TableInfo
arch=('any')
url="http://search.cpan.org/dist/$_dist"
license=('Artistic2.0')
options=('!emptydirs')
depends=(
         'perl-dbi'
         'perl-data-dumper-concise'
         'perl-moo'
        )
makedepends=(
             'perl-module-build'
             'perl-test-version'
            )
source=("http://search.cpan.org/CPAN/authors/id/R/RS/RSAVAGE/$_dist-$pkgver.tgz")
md5sums=('19f0bc54955fef9117dd2b20bf186182')
sha1sums=('8e39296e6e687ea1802b45aad55158cc41cfee17')
sha256sums=('0ee14e79e9224f2d71017c477685570c4aa363a0c770de8fe89ce84c8cdba167')
sha512sums=('d07083616940683b0dc0407138da30b6af2784e9946704ec8a2f0e187ec811e03c9a6bf03eb1247649619071eba49320a885b99615db364ccabfe7209f397492')

build() {
	cd "$srcdir/$_dist-$pkgver"

	perl Build.PL installdirs=vendor destdir="$pkgdir/"
	perl Build
}

check() {
	cd "$srcdir/$_dist-$pkgver"
	perl Build test
}

package() {
	cd "$srcdir/$_dist-$pkgver"
	perl Build install
}
