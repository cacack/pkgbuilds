arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl>=5.8.1')
makedepends=('perl-test-requires')
url='http://search.cpan.org/dist/Data-MessagePack'
source=('http://search.cpan.org/CPAN/authors/id/G/GF/GFUJI/Data-MessagePack-0.47.tar.gz')
